<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado"
    tools:context=".Hoja2">

    <TextView
        android:id="@+id/catego"
        style="@style/Titulos_grandes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Categorías"
        app:layout_constraintBottom_toTopOf="@+id/startHorizontal"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />
    <!--Más populares + carvdiews de los juegos-->
    <HorizontalScrollView
        android:id="@+id/startHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/neg_busc"
                android:layout_marginEnd="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tierra" />

                    <TextView
                        android:id="@+id/Todos"
                        style="@style/Buscar_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Todos" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/neg_busc"
                android:layout_marginEnd="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/balon" />

                    <TextView
                        android:id="@+id/Deportes"
                        style="@style/Buscar_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deportes" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/neg_busc"
                android:layout_marginEnd="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cyberico"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/Accion"
                        style="@style/Buscar_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acción" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/neg_busc"
                android:layout_marginEnd="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asesino" />

                    <TextView
                        android:id="@+id/Terror"
                        style="@style/Buscar_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terror" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/neg_busc"
                android:layout_marginEnd="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/retro" />

                    <TextView
                        android:id="@+id/Retro"
                        style="@style/Buscar_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Retro" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView"
        style="@style/Titulos_grandes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Más populares"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/black"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <!-- Contenido de la tarjeta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/acción"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cyberpunk" />

                    <TextView
                        style="@style/Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Todos" />
                    <!--android:drawableEnd="@drawable/ic_heart"-->
                    <TextView
                        style="@style/Categoria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Acción" />

                    <TextView
                        style="@style/Visitas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  1.9k visitas" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!---->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/black"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <!-- Contenido de la tarjeta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/acción2"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/twd" />

                    <TextView
                        style="@style/Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Todos" />
                    <!--android:drawableEnd="@drawable/ic_heart"-->
                    <TextView
                        style="@style/Categoria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Acción" />

                    <TextView
                        style="@style/Visitas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  1.9k visitas" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!---->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/black"
                android:elevation="10dp"
                app:cardCornerRadius="20dp">

                <!-- Contenido de la tarjeta -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/acción3"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cyberpunk" />

                    <TextView
                        style="@style/Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  Todos" />
                    <!--android:drawableEnd="@drawable/ic_heart"-->
                    <TextView
                        style="@style/Categoria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=" Acción" />

                    <TextView
                        style="@style/Visitas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="  1.9k visitas" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <!--Constrains GuideLine-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />
</androidx.constraintlayout.widget.ConstraintLayout>