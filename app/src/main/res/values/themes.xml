<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme without action bar. -->
    <style name="Theme.GameQuiz.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item> <!-- Desactiva el Splash por defecto de Android -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blanco_amarillo</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morado</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme with dark action bar. -->
    <style name="Theme.GameQuiz.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blanco_amarillo</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morado</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Navigation bar theme -->
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/morado</item>
        <item name="itemTextColor">@color/morado</item>
    </style>
</resources>