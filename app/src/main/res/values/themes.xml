<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme without action bar. -->
    <style name="Theme.GameQuiz.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item> <!-- Desactiva el Splash por defecto de Android -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gris_claro</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morado</item>
        <item name="colorSecondaryVariant">@color/morado</item>
        <item name="colorOnSecondary">@color/verde_gris</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/purple_200</item>
        <item name="colorOnTertiary">@color/purple_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorTertiary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Base application theme with dark action bar. -->
    <style name="Theme.GameQuiz.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item> <!-- Desactiva el Splash por defecto de Android -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gris_claro</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/morado</item>
        <item name="colorSecondaryVariant">@color/morado</item>
        <item name="colorOnSecondary">@color/azul_claro</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/purple_200</item>
        <item name="colorOnTertiary">@color/purple_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Navigation bar theme -->
    <style name="BottomNavigation">
        <item name="android:background">?attr/colorTertiary</item>
        <item name="itemIconTint">?attr/colorSecondary</item>
        <item name="itemTextColor">?attr/colorSecondary</item>
    </style>
</resources>